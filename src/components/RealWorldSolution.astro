---
import InfiniteSlider from "./InfiniteSlider.jsx";

let realWorldSolution = [
  {
    highlight: "AI-Powered Automation",
    heading: "Streamlining Operations with Intelligent Workflow Automation",
    subHeading:
      "Developed a custom AI-driven system that automated 80% of repetitive tasks, reducing operational costs and boosting efficiency for a logistics company.",
    caseStudy: "/assets/2-real-world-solution.png",
  },
  {
    highlight: "Predictive Analytics",
    heading: "Enhancing Customer Retention with AI Insights",
    subHeading:
      "Built a predictive analytics tool that identified churn risks, enabling a retail client to improve retention rates by 35% through personalized strategies.",
    caseStudy: "/assets/3-real-world-solution.png",
  },
  {
    highlight: "Machine Learning",
    heading: "Title: Transforming Healthcare with Data-Driven Diagnostics",
    subHeading:
      "Description: Designed a machine learning model that improved diagnostic accuracy by 25%, empowering healthcare providers with faster, more reliable patient insights.",
    caseStudy: "/assets/1-real-world-solution.png",
  },
];
const servicesOffered = [
  "Custom Software",
  "AI-Powered Solutions",
  "Data Analytics",
  "Custom Software",
  "Workflow Automation",
  "Predictive Modeling",
];
const techSolutions = [
  "Innovation in Tech",
  "Machine Learning",
  "Business Intelligence",
  "Innovation in Tech",
  "Scalable Systems",
  "Digital Transformation",
];
const strategicInitiatives = [
  "Data-First Approach",
  "Tech-Focused Growth",
  "AI-Driven Insights",
  "Data-First Approach",
  "Smart Applications",
  "Process Optimization",
  "Cloud Integration",
];
---

<div
  class="w-full flex flex-col justify-center items-center gap-10 py-[80px] px-[72px] max-lg:px-[20px]"
id="realworldsolutions"
  >
  <div class="w-full flex flex-col justify-center items-center">
    <h3
      class="text-[48px] max-lg:text-[32px] gap-[24px] font-bold text-center heading-dark"
    >
      Real-World Solutions with Proven Impact
    </h3>
    <span class="w-full font-normal text-[24px] max-lg:text-[18px] text-center">
      Discover how Zenaptic Labs delivers custom AI solutions that solve
      real-world challenges and drive success.
    </span>
  </div>

  <div class="w-full relative flex justify-center items-center">
    <InfiniteSlider
      featuresList={realWorldSolution}
      speed={80}
      speedOnHover={20}
      direction="horizontal"
      client:load
      component="real-world-solutions"
    />
  </div>

</div>
<div class="flex flex-col gap-[24px]">
      <div class="flex flex-col gap-[24px]">
        <div class="relative w-full">
          <div
            class="absolute left-0 top-0 h-full w-[40px] z-50
            toggle-gredient"
          >
          </div>

          <div
            class="!mx-0 w-full font-semibold !text-2xl max-lg:text-xl relative z-10"
          >
            <InfiniteSlider
              featuresList={servicesOffered}
              speed={80}
              speedOnHover={20}
              animationDirection="horizontal"
              direction="right-to-left"
              client:load
              component="Text-Infinite-Slider"
            />
          </div>
        </div>

        <div class="relative w-full">
          <div
            class="absolute left-0 top-0 h-full w-[40px] z-50
             toggle-gredient"
          >
          </div>

          <div
            class="!mx-0 w-full font-semibold text-2xl max-lg:text-xl relative z-10"
          >
            <InfiniteSlider
              featuresList={techSolutions}
              speed={80}
              speedOnHover={20}
              animationDirection="horizontal"
              direction="left-to-right"
              client:load
              component="Text-Infinite-Slider"
            />
          </div>
        </div>

        <div class="relative w-full">
          <div
            class="absolute left-0 top-0 h-full w-[40px] z-50
            toggle-gredient"
          >
          </div>

          <div
            class="text-2xl !mx-0 w-full font-semibold max-lg:text-xl relative z-10"
          >
            <InfiniteSlider
              featuresList={strategicInitiatives}
              speed={80}
              speedOnHover={20}
              animationDirection="horizontal"
              direction="right-to-left"
              client:load
              component="Text-Infinite-Slider"
            />
          </div>
        </div>
      </div>
    </div>